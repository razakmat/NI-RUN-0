function f(x) ->
	begin
		let i = 1;
		while i <= x
		do begin
			let j = x - i;
			let k = (i * 2) - 1;
			while j > 0
			do begin
				print(" ");
				j <- j - 1;
			end;
			while k > 0
			do begin
				print("*");
				k <- k - 1;
			end;
			print("\n");
			i <- i + 1;
		end;
	end;

print("height - 3\n");
f(3);
print("height - 6\n");
f(6);
